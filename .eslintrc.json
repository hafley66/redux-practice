{
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "async": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "camelcase": 2,
        "comma-dangle": ["error"],
        "eol-last": 2,
        "eqeqeq": 2,
        "indent": ["error", 4, {"SwitchCase": 1}],
        "no-trailing-spaces": 2,
        "object-property-newline": 2,
        "prefer-template": "error",
        "quotes": [2, "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
        "semi": ["error", "always"],
        "space-infix-ops": 2,
        "no-var": 2,
        "no-extra-boolean-cast": 0,
        "no-console": 0
    }
}
